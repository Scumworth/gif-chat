{
  "name": "gif-chat-server",
  "version": "0.1.0",
  "engines": {
    "node": "^17.4.0"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "private": true,
  "scripts": {
    "start": "cd server && node ./bin/www",
    "server": "cd server && node ./bin/www",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "giphy-api": "^2.0.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pug": "^3.0.2",
    "socket.io": "^4.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Scumworth/gif-chat.git"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
}
